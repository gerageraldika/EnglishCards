<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carpediemsolution.languagecards"
    android:versionCode="4"
    android:versionName="2.2">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.carpediemsolution.languagecards.CardsMainActivity"
            android:label="Language Cards"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.carpediemsolution.languagecards.InsertNewCardActivity"
            android:label=" "
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.carpediemsolution.languagecards.ServerCardsListActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.carpediemsolution.languagecards.ServerCardsListActivityByTheme"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.carpediemsolution.languagecards.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.carpediemsolution.languagecards.AuthorizedPersonActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>AuthorizedPersonActivity

        <activity
            android:name="com.carpediemsolution.languagecards.SignupActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.carpediemsolution.languagecards.EditCardActivity"
            android:label=" "
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.carpediemsolution.languagecards.PasswordSenderActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.carpediemsolution.languagecards.InformationActivity"
            android:label="About App"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.carpediemsolution.languagecards.CardsSyncActivity"
            android:label="Sync Data"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <receiver android:name=".notification.CardReceiver"/>
        <service android:name=".notification.CardService" />

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

    </application>

</manifest>